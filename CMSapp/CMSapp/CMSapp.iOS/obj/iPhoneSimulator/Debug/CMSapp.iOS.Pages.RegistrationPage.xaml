<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CMSapp.RegistrationPage"
              BackgroundColor="White"  
             >
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="30">
                <Entry x:Name="EmployeeIDEntry"
                       Placeholder="EmployeeID"  
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Entry x:Name="NameEntry" 
                       Placeholder="Full Name"  
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Picker x:Name="GenderPicker" 
                        Title="Gender" 
                        BackgroundColor="#dddddd" 
                        TextColor="Black" 
                        HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>MALE</x:String>
                        <x:String>FEMALE</x:String>
                    </Picker.Items>
                </Picker>
                <Entry x:Name="DepartmentEntry" 
                       Placeholder="Department"  
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Entry x:Name="ContactNoEntry" 
                       Placeholder="Contact Number"  
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Entry x:Name="PasswordEntry" 
                       Placeholder="Password"  
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Entry x:Name="ConfirmPasswordEntry" 
                       Placeholder="Confirm Password" 
                       BackgroundColor="#dddddd" 
                       TextColor="Gray"/>
                <Label x:Name="PasswordMismatchLabel" 
                       Text="Passwords do not match. Re-enter."  
                       FontAttributes="Italic" 
                       TextColor="Red" 
                       IsVisible="False"/>
                <StackLayout Padding="70,0">
                    <Button x:Name="SignUpButton" 
                            BackgroundColor="Red"
                            Clicked="SignUp_OnClick_Register"
                            Text="SIGN UP" />
                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content> 
</ContentPage>